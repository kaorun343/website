extends ../_layouts/master

block content
  .container
    h1.page-header ユーザー情報
    
    form(method="POST")
      legend パスワード設定
      - echo Form::csrf();
      .form-group
        label(for="old_password") 現在のパスワード
        input.form-control(type="text", name="old_password", required)
      .form-group
        label(for="password") 新しいパスワード
        input.form-control(type="password", name="password", required)
      button.btn.btn-default(type="submit") 変更
